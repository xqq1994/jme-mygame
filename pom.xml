            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/eventbus.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.bulletphysics</groupId>
            <artifactId>jbullet</artifactId>
            <version>3.2.1-stable</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/jbullet.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.jarnbjo</groupId>
            <artifactId>j-ogg-all</artifactId>
            <version>3.2.1-stable</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/src/main/resources/lib/j-ogg-all.jar</systemPath>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>